<div class='deals'>
<%= render partial: "devise/shared/header", locals: { back: groups_path, label: 'TRANSACTIONS', form: nil } %>
<div class='total'>
<span>Total</span><span><%= render partial: "total", locals: { deals: @deals } %></span>
</div>
<div class= 'card'>
<% @deals.each do |deal| %>
  <div class='card-body'>
    <% group = Group.find(params[:group_id]) %>
    <% height = group.icon == "https://i.postimg.cc/pdDBsq3v/Vector-Joystick-PNG-Picture.png" ? 'height: 35px' : 'height: 50px'%>
    <img src=<%= group.icon%> alt='categories' style="<%= height%>">
    <h4><%= deal.name%></h4>
    <h5>$<%= deal.amount%></h5>
  </div>
<% end %>
</div>
<button><%= link_to 'NEW TRANSACTION', new_group_deal_path%></button>
</div>